<div class="blog-list">
    {% for post in collections.blog %}
    <article class="card" style="margin-bottom: var(--spacing-lg);">
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <div class="post-meta">
            <time datetime="{{ post.date | htmlDateString }}">{{ post.date | dateFormat }}</time>
            <span class="reading-time">{{ post.templateContent | readingTime }}</span>
            {% if post.data.author %}
                <span class="author">by {{ post.data.author }}</span>
            {% endif %}
        </div>
        {% if post.data.category %}
            <span class="category-badge">{{ post.data.category }}</span>
        {% endif %}
        {% if post.data.excerpt %}
            <p style="margin-top: var(--spacing-md);">{{ post.data.excerpt }}</p>
        {% endif %}
        {% if post.data.tags %}
            <div class="tags">
                {% for tag in post.data.tags %}
                    <a href="/tags/{{ tag | slug }}/" class="tag">#{{ tag }}</a>
                {% endfor %}
            </div>
        {% endif %}
        <a href="{{ post.url }}" style="display: inline-block; margin-top: var(--spacing-md);">Read more â†’</a>
    </article>
    {% else %}
    <div class="card">
        <p>No blog posts yet. Check back soon for updates on our mission and work!</p>
    </div>
    {% endfor %}
</div>