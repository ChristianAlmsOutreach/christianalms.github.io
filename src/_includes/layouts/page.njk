---
layout: base.njk
---

<article class="page">
    <div class="container">
        <header class="page-header">
            <h1 class="page-title">{{ title }}</h1>
            {% if subtitle %}
                <p class="page-subtitle">{{ subtitle }}</p>
            {% endif %}
        </header>
        
        <div class="page-content">
            {{ content | safe }}
        </div>
    </div>
</article>